{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "typeRoots": [
            "./node_modules/@types",
            "./src/globals"
        ],
        "paths": {
            "*": [
                "node_modules/*",
            ],
            "src/*": [
                "./*"
            ]
        },
        "resolveJsonModule": true,
        "lib": [
            "es6"
        ],
        "types": [
            "reflect-metadata",
            "jest",
            "node"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
    ]
}
